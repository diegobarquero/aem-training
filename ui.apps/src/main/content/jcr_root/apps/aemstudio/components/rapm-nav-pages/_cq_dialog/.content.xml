<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" jcr:primaryType="nt:unstructured" jcr:title="RAPM Nav pages" sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container" granite:class="cmp-container__editor">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">

                <items jcr:primaryType="nt:unstructured"
                        sling:hideChildren="[*]">
                    <pages
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Pages"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        granite:class="card-type"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">

                                            <eyebrow
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Group tag"
                                                fieldDescription="Select a initial page tag"
                                                name="./pageeyebrow">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <highlights
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Highlights"
                                                            value="highlights" />
                                                        <featured
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Featured"
                                                            value="featured" />
                                                    </items>
                                            </eyebrow>                                        

                                            <populationMode
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Variation"
                                                fieldDescription="Variation show/hide."
                                                validation="mf-remove-hidden-required"
                                                name="./populationMode">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".populationMode-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <customAuthor
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Authoring"
                                                        value="customAuthor"/>
                                                    <dynamic
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Dynamic"
                                                        value="dynamic"/>
                                                </items>
                                            </populationMode>

                                            <customAuthorOpt jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                granite:class="hide populationMode-showhide-target">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="customAuthor"/>
                                                <items jcr:primaryType="nt:unstructured">


                                                    <myMultifield
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        fieldLabel="Multifield"
                                                        fieldDescription="Here you can fill you pages data"
                                                        composite="{Boolean}true"
                                                        validation="multifield-limit-min:1-max:3">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./navpages">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <pagethumbnail 
                                                                    jcr:primaryType="nt:unstructured" 
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldLabel="Page Thumbnail" 
                                                                    fieldDescription="Select an image"
                                                                    forceSelection="{Boolean}true"
                                                                    rootPath="/content/dam/aemstudio" 
                                                                    name="./pagethumbnail" />      
                                                                
                                                                <category
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    fieldLabel="Select a Category"
                                                                    fieldDescription="Select page category"
                                                                    name="./pagecategory">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <article
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Article"
                                                                            value="article" />
                                                                        <news
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="News"
                                                                            value="news" />
                                                                        <service
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Services"
                                                                            value="services" />
                                                                    </items>
                                                                </category>
                                                                    
                                                                <pagetitle 
                                                                    jcr:primaryType="nt:unstructured" 
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                                                                    fieldLabel="Card title" 
                                                                    name="./pagetitle" />

                                                                <minutes 
                                                                    jcr:primaryType="nt:unstructured" 
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield" 
                                                                    fieldLabel="Time to read" fieldDescription="Minutes to read"
                                                                    name="./minutes"
                                                                    min="{Long}1"
                                                                    max="{Long}60"
                                                                    step="{Double}1" />

                                                                <pageurl 
                                                                    jcr:primaryType="nt:unstructured" 
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
                                                                    fieldLabel="Pathfield" fieldDescription="Look for a page" 
                                                                    rootPath="/content/aemstudio" 
                                                                    name="./pageurl" />

                                                                <switch
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                    fieldLabel="Open in a new tab?" 
                                                                    checked="_blank"
                                                                    name="./switchValue"
                                                                    uncheckedValue="_self"
                                                                    value="{String}_blank" />
                                                            </items>
                                                        </field>
                                                    </myMultifield>

                                                </items>
                                            </customAuthorOpt>
                                            
                                            <dynamicOpt jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                granite:class="hide populationMode-showhide-target">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="dynamic"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                   
                                                    <dynamicMultifield
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        fieldLabel="Dynamic Multifield"
                                                        fieldDescription="Here you can fill you pages data"
                                                        composite="{Boolean}true"
                                                        validation="multifield-limit-min:1-max:3">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./navDynamicPages">
                                                            <items jcr:primaryType="nt:unstructured">
          
                                                                <pageurldynamic 
                                                                jcr:primaryType="nt:unstructured" 
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
                                                                fieldLabel="Pathfield" fieldDescription="Look for a page" 
                                                                rootPath="/content" 
                                                                name="./dynamicurl" />

                                                                <dynamicMinutes 
                                                                    jcr:primaryType="nt:unstructured" 
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield" 
                                                                    fieldLabel="Time to read" fieldDescription="Minutes to read"
                                                                    name="./minutes"
                                                                    min="{Long}1"
                                                                    max="{Long}60"
                                                                    step="{Double}1" />

                                                                <dynamicSwitch
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                    fieldLabel="Open in a new tab?" 
                                                                    checked="_blank"
                                                                    name="./switchValue"
                                                                    uncheckedValue="_self"
                                                                    value="{String}_blank" />                                                                

                                                            </items>
                                                        </field>
                                                    </dynamicMultifield>


                                                </items>
                                            </dynamicOpt>                                            

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </pages>

                    <styles
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Styles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">

                                        <items jcr:primaryType="nt:unstructured">

                                            <variants
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Display your pages"
                                                fieldDescription="Select how to display your pages"
                                                name="./pagestyle">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <horizontal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Horizontal"
                                                        value="horizontal" />
                                                    <vertical
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Vertical"
                                                        value="vertical" />
                                                </items>
                                            </variants>    
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </styles>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>