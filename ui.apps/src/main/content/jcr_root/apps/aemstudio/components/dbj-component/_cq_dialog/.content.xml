<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="DBJ Component"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
        granite:class="cmp-container__editor">
        <items jcr:primaryType="nt:unstructured">
          <column
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <column jcr:primaryType="nt:unstructured"
                    granite:class="card-type"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                      <populationMode
                        granite:class="cq-dialog-dropdown-showhide"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Variation"
                        fieldDescription="Variation show/hide."
                        validation="mf-remove-hidden-required"
                        name="./populationMode">
                        <granite:data
                          jcr:primaryType="nt:unstructured"
                          cq-dialog-dropdown-showhide-target=".populationMode-showhide-target"/>
                        <items jcr:primaryType="nt:unstructured">
                          <customAuthor
                            jcr:primaryType="nt:unstructured"
                            text="Authoring"
                            value="customAuthor"/>
                          <dynamic
                            jcr:primaryType="nt:unstructured"
                            text="Dynamic"
                            value="dynamic"/>
                        </items>
                      </populationMode>

                      <customAuthorOpt jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        granite:class="hide populationMode-showhide-target">
                        <granite:data
                          jcr:primaryType="nt:unstructured"
                          showhidetargetvalue="customAuthor"/>
                        <items jcr:primaryType="nt:unstructured">
                          <cardthumb 
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Thumbnail"
                            fieldDescription="Select the card image"
                            forceSelection="{Boolean}true"
                            name="./cardthumb" 
                            rootPath="/content/dam/aemstudio" />

                            <cardtitle
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                              fieldLabel="Page title"
                              fieldDescription="This is a Textfield."
                              name="./cardtitle"
                              required="{Boolean}True"/>

                            <carddescription
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                              fieldLabel="Description"
                              emptyText="Some placeholder text"
                              fieldDescription="This is a Textarea."
                              name="./carddescription"/>

                            <buttonlabel
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                              fieldLabel="Button Label"
                              fieldDescription="This is a Textfield."
                              name="./btnlabel"
                              required="{Boolean}True"/>

                            <cardlink
                              jcr:primaryType="nt:unstructured"
                              sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                              fieldLabel="Link"
                              fieldDescription="Select the card link"
                              forceSelection="{Boolean}true"
                              name="./cardlink" 
                              rootPath="/content/aemstudio" />                        
                        </items>
                      </customAuthorOpt>
                      
                      <dynamicOpt jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        granite:class="hide populationMode-showhide-target">
                        <granite:data
                          jcr:primaryType="nt:unstructured"
                          showhidetargetvalue="dynamic"/>
                        <items jcr:primaryType="nt:unstructured">
                          <apiKey
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="API Key"
                            fieldDescription="API Key."
                            name="./apiKey"
                            required="{Boolean}True"/>

                          <companyName
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Company name"
                            fieldDescription="Company name."
                            name="./companyName"
                            required="{Boolean}True"/>

                          <fromDate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                            displayedFormat="YYYY-MM-DD"
                            fieldLabel="Datepicker"
                            fieldDescription="This is a Datepicker."
                            name="./fromDate"
                            type="datetime"
                            typeHint="Date"/>

                          <toDate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                            displayedFormat="YYYY-MM-DD"
                            fieldLabel="Datepicker"
                            fieldDescription="This is a Datepicker."
                            name="./toDate"
                            type="datetime"
                            typeHint="Date"/>

                          <language
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Language"
                            fieldDescription="This is a Select Dropdown."
                            name="./language">
                            <items jcr:primaryType="nt:unstructured">
                              <english
                                jcr:primaryType="nt:unstructured"
                                text="English"
                                value="en"/>
                              <spanish
                                jcr:primaryType="nt:unstructured"
                                text="Spanish"
                                value="es"/>
                              <french
                                jcr:primaryType="nt:unstructured"
                                text="French"
                                value="fr"/>
                            </items>
                          </language>

                          <sortBy
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Sort by"
                            fieldDescription="This is a Select Dropdown."
                            name="./sortBy">
                            <items jcr:primaryType="nt:unstructured">
                              <relevancy
                                jcr:primaryType="nt:unstructured"
                                text="Relevancy"
                                value="relevancy"/>
                              <popularity
                                jcr:primaryType="nt:unstructured"
                                text="Popularity"
                                value="popularity"/>
                              <publishedAt
                                jcr:primaryType="nt:unstructured"
                                text="Published at"
                                value="publishedAt"/>
                            </items>
                          </sortBy>
                        </items>
                      </dynamicOpt>
                    </items>
                  </column>
              </items>
            </column>
        </items>
    </content>
</jcr:root>

