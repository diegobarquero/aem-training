<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0" jcr:primaryType="nt:unstructured" jcr:title="RAMP Component" sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container" granite:class="cmp-container__editor">
        <items jcr:primaryType="nt:unstructured">
            <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/tabs"
            maximized="{Boolean}true">

                <items jcr:primaryType="nt:unstructured"
                        sling:hideChildren="[*]">
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">

                                            <cardthumbnail 
                                            jcr:primaryType="nt:unstructured" 
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Thumbnail" 
                                            fieldDescription="Select an image"
                                            forceSelection="{Boolean}true"
                                            rootPath="/content/dam/aemstudio" 
                                            name="./cardthumbnail"/>


                                            <cardtitle 
                                            jcr:primaryType="nt:unstructured" 
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                                            fieldLabel="Card title" 
                                            name="./cardtitle"/>

                                            <carddescription 
                                            jcr:primaryType="nt:unstructured" 
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea" 
                                            fieldLabel="Card description" 
                                            emptyText="Some placeholder text" 
                                            fieldDescription="Description goes here." 
                                            name="./carddescription"/>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </general>

                    <multilinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="CTAs"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">

                                        <items jcr:primaryType="nt:unstructured">
                                            <myMultifield
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="Multifield"
                                                fieldDescription="This is a Multifield."
                                                composite="{Boolean}true">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./links">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <btncard 
                                                        jcr:primaryType="nt:unstructured" 
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                                                        fieldLabel="Button label" 
                                                        name="./btncard"/>


                                                        <btnlink 
                                                        jcr:primaryType="nt:unstructured" 
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" 
                                                        fieldLabel="Pathfield" fieldDescription="This is a Pathfield." 
                                                        rootPath="/content/aemstudio" 
                                                        name="./btnlink"/>

                                                        <switch
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                        fieldLabel="Open in a new tab?" 
                                                        checked="_blank"
                                                        name="./switchValue"
                                                        uncheckedValue="_self"
                                                        value="{String}_blank"/>
                                                    </items>
                                                </field>
                                            </myMultifield>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </multilinks>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>