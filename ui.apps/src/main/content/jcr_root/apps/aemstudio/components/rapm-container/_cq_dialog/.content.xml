<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured" jcr:title="Settings" sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <numberfield 
                        jcr:primaryType="nt:unstructured" 
                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield" 
                        fieldLabel="Amount of Items" fieldDescription="Set amount of items"
                        name="./amountOfItems"
                        min="{Long}1"
                        max="{Long}9"
                        step="{Double}1"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>